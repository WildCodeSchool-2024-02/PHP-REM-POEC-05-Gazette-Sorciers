<section class="component comment-show">
    {% for comment in comments %}

		<article class="comment">
			<div class="comment-part-1">
				<img class="avatar" src="/assets/images/logo.png" alt="Avatar de l'utilisateur">
				<p class="author">{{ commentUsers[comment.id].name }} {{ commentUsers[comment.id].lastname }} </p>
				 <p class="date"> le {{ comment.created_at|date("d M Y - H:i") }}</p>
			</div>
			<div class="comment-part-2">
				<p class="description">{{ comment.content }}</p>
				
				
				<div class="comment-part-3">
					{% if comment.picture is not empty %}
					<img class="picture-comment" src="{{'/upload/' ~ comment.picture}}" alt="Image du commentaire">
					{% endif %}
				</div>
			
			</div>
		</article>

	
    {% endfor %}
</section>
