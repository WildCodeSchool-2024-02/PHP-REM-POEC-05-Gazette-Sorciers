{% extends 'layout.html.twig' %}

{% block content %}
<section class="component">
	{% if comment is defined %}
	<article class="comment">
		<img class="avatar" src="https://picsum.photos/100">
		<h2 class="titre">
			{{ comment.content|truncate(20) }}
		</h2>
		<p class="date">{{ comment.created_at }}</p>
		<p class="author">Par {{ comment.id_user }}</p>
		<p class="description">{{ comment.content }}</p>
	</article>
	{% else %}
	<article class="comment">C'est vide ğŸ¤¦</article>
	{% endif %}
</section>
{% endblock %}