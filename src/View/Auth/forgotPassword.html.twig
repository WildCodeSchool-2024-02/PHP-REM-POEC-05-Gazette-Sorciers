{% extends 'layout.html.twig' %} {% block stylesheet %}
<link rel="stylesheet" href="/assets/css/_auth.css" />
<link rel="stylesheet" href="/assets/css/_form.css" />
{% endblock %} 

{% block title %}Mot de passe oublié{% endblock %} 
{% block content %}

<section class="form-container">
    <div class="form-wrapper">
        <form method="post" action="/forgotPassword" class="form">
            <h1 class="form-title">Mot de passe oublié</h1>
            {% if error %}
            <p style="color: rgb(202, 106, 106)">{{ error }}</p>
            {% endif %}
            <label for="mail" class="label-title">Email</label>
            <div class="input-container">
                <input
                    type="email"
                    id="mail"
                    name="mail"
                    placeholder="Tapez votre Email"
                />
                <span>
                    <svg
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"
                            stroke-width="2"
                            stroke-linejoin="round"
                            stroke-linecap="round"
                        ></path>
                    </svg>
                </span>
            </div>
            <button type="submit" class="submit">Envoyer</button>
        </form>
    </div>
</section>
{%  endblock %}