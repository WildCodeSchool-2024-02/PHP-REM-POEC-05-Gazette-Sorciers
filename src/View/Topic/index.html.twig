{% extends 'layout.html.twig' %}
{% block stylesheet %}
<link rel="stylesheet" href="/assets/css/topic.css">
{% endblock %}
{% block content %}
<section class="topic-component">
	{% if topics is defined %}
		{% for topic in topics %}
			<article class="topic">
				<img class="avatar" src="https://picsum.photos/100">
				<h2>
					<a class="title" href="/topics/show?id={{ topic.id }}">{{ topic.id }}.
						{{ topic.title }}</a>
				</h2>
				<p class="date">{{ topic.created_at }}</p>
				<p class="description">{{ topic.content }}</p>
			</article>
		{% endfor %}
	{% else %}
		<article class="category">C'est vide ðŸ¤¦</article>
    {% endif %}
</section>

{% endblock %}
