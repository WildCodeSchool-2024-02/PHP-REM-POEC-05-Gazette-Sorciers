<div class="banner">
    <picture
        ><source
            media="(max-width: 800px)"
            srcset="/assets/images/banner-default.jpg"
            style="height: 400px"
        />
        <source
            media="(min-width: 801px)"
            srcset="/assets/images/banner4.jpg"
        />
        <img src="/assets/images/banner4.jpg" alt="" />
    </picture>
</div>

<div class="index">
    <section class="categories">
        <header class="categories-header">
            <img
                src="/assets/images/categories.png"
                alt="Cat√©gories"
                class="header-image1"
            />
        </header>
        {% for category in categories %}
        <article class="category">
            <img
                class="avatar-index"
                src="{{ category.picture ? '/upload/' ~ category.picture}}"
            />
            <div class="category-content">
                <h2 class="titre">
                    <a href="/topics?id={{ category.id }}">
                        {{ category.name }}</a
                    >
                </h2>
                <p class="description">{{ category.description }}</p>
            </div>
        </article>
        {% else %}
        <article class="category">C'est vide ü§¶</article>
        {% endfor %}
    </section>
    <section class="last-section">
        <header class="messages-header">
            <img
                src="/assets/images/lastcomments.png"
                alt="Derniers commentaires"
                class="header-image2"
            />
        </header>
        <aside class="latest-messages">
            {% if comments is not empty %}
            <ul>
                {% for comment in comments %}
                <li>
                    <strong
                        >{{ comment.user_name }}
                        {{ comment.user_lastname }}</strong
                    >
                    sur
                    <a
                        class="topic-name"
                        href="topics/show?id={{ comment.topic_id }}"
                        >{{ comment.topic_title }}</a
                    ><br />
                    <a
                        class="cat-name"
                        href="topics?id={{ comment.category_id }}"
                        >{{ comment.category_name }}</a
                    ><br />

                    <p>{{ comment.comment_content }}</p>
                    <br />
                    <small>Post√© le {{ comment.comment_date }}</small>
                </li>
                {% endfor %}
            </ul>
            {% else %}
            <p>Aucun commentaire n'a √©t√© publi√© r√©cemment.</p>
            {% endif %}
        </aside>
    </section>
</div>
