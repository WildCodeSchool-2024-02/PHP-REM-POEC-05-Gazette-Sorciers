<div class="banner">
    <picture
        ><source
            media="(max-width: 800px)"
            srcset="/assets/images/banner-default.jpg"
			style="height: 400px;"
        />
        <source
            media="(min-width: 801px)"
            srcset="/assets/images/banner4.jpg"
        />
        <img src="/assets/images/banner4.jpg" alt="" />
    </picture>
</div>

<section class="component">
    {% for category in categories %}
    <article class="category">
        <img class="avatar" src="https://picsum.photos/100" />
        <h2 class="titre">
            <a href="/topics?id={{ category.id }}"
                >{{ category.id }}. {{ category.name }}</a
            >
        </h2>
        <p class="date">{{ category.created_at }}</p>
        <p class="description">{{ category.description }}</p>
    </article>
    {% else %}
    <article class="category">C'est vide ðŸ¤¦</article>
    {% endfor %}
</section>
