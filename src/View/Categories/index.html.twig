<section class="component">
	{% for category in categories %}
		<article class="categorie">
			<img class="avatar" src="https://picsum.photos/100">
			<h2 class="titre">
				<a href="/categories/show?id={{ category.id_category }}">{{ category.id_category }}.
					{{ category.name }}</a>
			</h2>
			<p class="date">{{ category.created_at }}</p>
			<p class="description">{{ category.description }}</p>
		</article>
	{% else %}
		<article class="categorie">Nothing to display</article>
	{% endfor %}
</section>
