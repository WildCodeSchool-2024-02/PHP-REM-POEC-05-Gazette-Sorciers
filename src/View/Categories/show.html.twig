{% extends 'layout.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/style.css"> 
    <link rel="stylesheet" href="/assets/css/_navbar.css" />
    <link rel="stylesheet" href="/assets/css/_categories.css" />
{% endblock %}
 
{% block content %}
<section class="component">
	{% if category is defined %}
		<article class="category">
			<img class="avatar" src="https://picsum.photos/100">
			<h2 class="titre">
				<a href="/categories/show?id={{ category.id }}">{{ category.id }}.
					{{ category.name }}</a>
			</h2>
			<p class="date">{{ category.created_at }}</p>
			<p class="description">{{ category.description }}</p>
		</article>
	{% else %}
		<article class="category">C'est vide ðŸ¤¦</article>
    {% endif %}
</section>

{% endblock %}
